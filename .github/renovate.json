{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "enabled": true,
  "timezone": "America/Vancouver",
  "semanticCommits": "enabled",
  "assignees": [
    "@ivanjosipovic"
  ],
  "extends": [
    "config:recommended"
  ],
  "platformAutomerge": true,
  "ignorePaths": [
    "**/docs/**",
    "**/charts/**"
  ],
  "schedule": [
    "before 4am"
  ],
  "packageRules": [
    {
      "ignoreUnstable": false,
      "matchManagers": [
        "nuget"
      ],
      "matchPackageNames": [
        "OpenTelemetry.Exporter.Prometheus.AspNetCore",
        "OpenTelemetry.Instrumentation.EventCounters"
      ],
      "respectLatest": false
    },
    {
      "automerge": true,
      "matchFileNames": [
        "global.json"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch",
        "digest"
      ]
    },
    {
      "automerge": true,
      "matchFileNames": [
        "src/**"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch",
        "digest"
      ],
      "semanticCommitType": "fix"
    },
    {
      "automerge": true,
      "matchFileNames": [
        "tests/**",
        "benchmarks/**"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch",
        "digest"
      ]
    },
    {
      "automerge": true,
      "groupName": "Dockerfile Dependecies",
      "groupSlug": "dockerfile-dependecies",
      "matchPackageNames": [
        "alpine_.*"
      ],
      "matchUpdateTypes": [
        "major",
        "minor",
        "patch",
        "digest"
      ],
      "semanticCommitType": "fix"
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": [
        "/Dockerfile$/"
      ],
      "matchStrings": [
        "#\\s*renovate:\\s*datasource=(?<datasource>.*?) depName=(?<depName>.*?)( versioning=(?<versioning>.*?))?\\sENV .*?_VERSION=\"(?<currentValue>.*)\"\\s"
      ],
      "versioningTemplate": "{{#if versioning}}{{{versioning}}}{{else}}semver{{/if}}"
    }
  ]
}
